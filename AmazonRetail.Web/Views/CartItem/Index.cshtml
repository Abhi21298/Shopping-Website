@{
}
<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Index</title>
    </head>
    <body>

        <div class="slider-area ">
            <div class="single-slider slider-height2 d-flex align-items-center">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="hero-cap text-center">
                                <h2>Cart</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        @if (ViewBag.cart != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Option</th>
                        <!--<th>Id</th>-->
                        <th>Name</th>
                        <th>Photo</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.cart)
                    {
                    <tr>
                        <td>
                            <div class="hero__caption">
                                <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                    <a class="btn hero-btn" asp-area="" asp-controller="CartItem" asp-action="Remove" asp-route-id="@item.Product.Id">Remove</a>
                                </div>
                            </div>
                        </td>
                        
                        <!--<td>@item.Product.Id</td>-->
                        <td>@item.Product.Name</td>
                        <td><img src="~/assets/img/gallery/@item.Product.ImageFile" /> </td>
                        <td>@item.Product.UnitPrice</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Product.UnitPrice * item.Quantity)</td>
                    </tr>
                    }
                    <tr>
                        <td align="right" colspan="5">Sum</td>
                        <td>
                            @ViewBag.total
                        </td>
                    </tr>
                </tbody>
            </table>
            if (@ViewBag.Total != 0)
            {
                
                    <div class="col-xl-4 col-lg-4 col-md-6 ">
                        <div class="hero__caption">
                            <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                <a class="btn hero-btn" asp-area="" asp-controller="Products" asp-action="Index">Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                    <br />
                   
                    <div class="col-xl-4 col-lg-4 col-md-6 ">
                        <div class="hero__caption">
                            <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                                <a class="btn hero-btn" asp-area="" asp-controller="Checkout" asp-action="PayIndex">Checkout</a>
                            </div>
                        </div>
                    </div>
             
            }
            else
            {
                <div class="col-xl-4 col-lg-4 col-md-6 ">
                    <div class="hero__caption">
                        <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                            <a class="btn hero-btn" asp-area="" asp-controller="Products" asp-action="Index">Continue Shopping</a>
                        </div>
                    </div>
                </div>

            }
        }
        else
        {
            <h5>No items in cart, Happy Shopping!</h5>
            <div class="col-xl-4 col-lg-4 col-md-6 ">
                <div class="hero__caption">
                    <div class="hero__btn" data-animation="fadeInLeft" data-delay=".8s" data-duration="2000ms">
                        <a class="btn hero-btn" asp-area="" asp-controller="Products" asp-action="Index">Continue Shopping</a>
                    </div>
                </div>
            </div>
       }


    </body>
</html>